<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
</head>

<script src="../public/scripts/flight-search.js"></script>

<body>
    <%- include ('partials/navbar') %>
    <h1 class="d-flex justify-content-center">Welcome to <%= title %> Page</h1>
    <div class="d-flex justify-content-around">
        <form id="flight-search-form" onsubmit="submitSearch(event)">
            <div class="form-row">
                <label for="from">From:</label>
                <input type="text" id="from" name="from" style="height: 30px;" onclick="showSuggestion('from')" readonly
                    required>
                <div id="from-popup" class="from-popup" style="display: none;">
                    <input type="text" id="from-searchInput" class="from-search-input" placeholder="Search for a city">
                    <ul id="from-suggestions" class="form-suggestions"
                        style="list-style: none; border: 1px solid black; max-height: 200px; overflow-y: scroll;">
                    </ul>
                </div>
                <label for="to">To:</label>
                <input type="text" id="to" name="to" style="height: 30px;" onclick="showSuggestion('to')" readonly
                    required>
                <div id="to-popup" class="to-popup" style="display: none;">
                    <input type="text" id="to-searchInput" class="to-search-input" placeholder="Search for a city">
                    <ul id="to-suggestions" class="form-suggestions"
                        style="list-style: none; border: 1px solid black; max-height: 200px; overflow-y: scroll;">
                    </ul>
                </div>
            </div>
            <div class="form-row">
                <p id="from-airport"></p>
                <p id="to-airport"></p>
            </div>
            <div class="form-row">
                <div id="from-suggestions"></div>
                <div id="to-suggestions"></div>
            </div>
            <div class="form-row">
                <label for="date">Date:</label>
                <input type="date" id="date" name="date" required>

                <label for="class">Class:</label>
                <select id="class" name="class" required>
                    <option value="ECONOMY">Economy</option>
                    <option value="PREMIUM_ECONOMY">Premium Economy</option>
                    <option value="BUSINESS">Business</option>
                    <option value="FIRST">First Class</option>
                </select>
            </div>
            <div class="form-row">
                <label for="adults">Adults:</label>
                <input type="number" id="adults" name="adults" min="1" required>
                <label for="infants">Children:</label>
                <input type="number" id="infants" name="infants" min="0" required>

                <label for="infants">Infants:</label>
                <input type="number" id="infants" name="infants" min="0" required>
            </div>

            <button type="submit">Submit</button>
        </form>
    </div>
    <div id="flight-list-container" class="container d-flex flex-wrap justify-content-around mt-4"></div>
</body>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

</html>